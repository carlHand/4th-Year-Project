<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bottomBar" >
    <TextView
        android:id="@+id/personalprogram_detail"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:textIsSelectable="true"
        tools:context="com.projectyr4x00091174.carl.traingain.TrainingProgramDetailFragment"
        android:layout_above="@+id/saveProgram" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/lifts"
        android:id="@+id/addLifts"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/update"
        android:id="@+id/updateLifts"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/addLifts"
        android:layout_toEndOf="@+id/addLifts" />

</RelativeLayout>